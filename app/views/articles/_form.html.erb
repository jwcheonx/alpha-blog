<%= form_with model: @article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "#{:categories} (select zero or more)" %><br>
    <%= f.collection_select :category_ids, Category.all, :id, :name, multiple: true, size: 3 %>
  </p>
  <p>
    <%= f.label 'Publish date (leave it blank to save as a draft)' %><br>
    <% if @article.new_record? %>
      <%= f.datetime_select :published_at, include_blank: true, selected: Time.current %>
    <% else %>
      <%= f.datetime_select :published_at, include_blank: true %>
    <% end %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

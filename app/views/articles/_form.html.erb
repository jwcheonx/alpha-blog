<%= form_with model: @article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "#{:categories} (select zero or more)" %><br>
    <%= f.collection_select :category_ids, Category.all, :id, :name, multiple: true, size: 3 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

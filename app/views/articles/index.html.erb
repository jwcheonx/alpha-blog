<h1>Articles</h1>

<% if @articles.any? %>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= link_to 'View', a %></td>
        <td><%= link_to 'Edit', edit_article_path(a) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
